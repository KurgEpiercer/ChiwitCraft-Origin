{
    "type": "origins:multiple",
    "hidden": false,

    "name": "Embodiment of Death",
    "description": "You're the embodiment of death itself, granting you strength harnesses from the death.",

    "reaper_tag": {
        "type": "origins:action_on_callback",
        "entity_action_gained": {
            "type": "origins:execute_command",
            "command": "tag @s add reaper",
            "permission_level": 4
        },
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "tag @s remove reaper",
            "permission_level": 4
        }
    },
    "death_tag": {
        "type": "origins:action_on_callback",
        "entity_action_gained": {
            "type": "origins:execute_command",
            "command": "tag @s add death",
            "permission_level": 4
        },
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "tag @s remove death",
            "permission_level": 4
        }
    },

    "strength": {
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "effect give @s strength 1 0 true"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:dmr/dmana",
            "comparison": ">=",
            "compare_to": 70
        }
    },
    
    "color_change": {
        "type": "origins:model_color",
        "alpha": 1,
        "red": 0.12,
        "green": 0.12,
        "blue": 0.12,
        "condition": {
            "type": "origins:resource",
            "resource": "cc:rp/rpc/reapercolor_resource",
            "comparison": "==",
            "compare_to": 1
        }
    }
}
