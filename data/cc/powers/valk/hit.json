{
    "hidden":true,
    "type": "origins:multiple",

    "aot": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:valk/hitcounter",
            "change": 1
        }
    },
    "aot_remove": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:valk/hitcounter",
                    "change": -3
                },
                {
                    "type": "origins:execute_command",
                    "command": "attribute @s minecraft:generic.attack_speed modifier remove insta_hit"
                },
                {
                    "type": "origins:remove_power",
                    "power": "*:valk/hit"
                }
            ]
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:valk/hitcounter",
            "comparison": "==",
            "compare_to": 3
        }
    }
}